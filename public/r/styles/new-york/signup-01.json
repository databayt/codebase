{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "signup-01",
  "description": "A simple signup form.",
  "type": "registry:template",
  "dependencies": [],
  "registryDependencies": [
    "button",
    "card",
    "input",
    "label"
  ],
  "files": [
    {
      "path": "templates/signup-01/page.tsx",
      "content": "import { SignupForm } from \"@/registry/new-york/templates/signup-01/components/signup-form\"\n\nexport default function Page() {\n  return (\n    <div className=\"flex min-h-svh w-full items-center justify-center \">\n      <div className=\"w-full max-w-sm\">\n        <SignupForm />\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:page",
      "target": "app/signup-01/page.tsx"
    },
    {
      "path": "templates/signup-01/components/signup-form.tsx",
      "content": "import Link from \"next/link\"\nimport { Button } from \"@/components/ui/button\"\nimport {\n  Card,\n  CardContent,\n  CardDescription,\n  CardHeader,\n  CardTitle,\n} from \"@/components/ui/card\"\nimport { Input } from \"@/components/ui/input\"\nimport { Label } from \"@/components/ui/label\"\n\nexport function SignupForm({ ...props }: React.ComponentProps<typeof Card>) {\n  return (\n    <Card {...props}>\n      <CardHeader>\n        <CardTitle className=\"text-2xl\">Create an account</CardTitle>\n        <CardDescription>\n          Enter your information below to create your account\n        </CardDescription>\n      </CardHeader>\n      <CardContent>\n        <form>\n          <div className=\"flex flex-col gap-6\">\n            <div className=\"grid gap-2\">\n              <Label htmlFor=\"name\">Full Name</Label>\n              <Input\n                id=\"name\"\n                type=\"text\"\n                placeholder=\"John Doe\"\n                required\n              />\n            </div>\n            <div className=\"grid gap-2\">\n              <Label htmlFor=\"email\">Email</Label>\n              <Input\n                id=\"email\"\n                type=\"email\"\n                placeholder=\"m@example.com\"\n                required\n              />\n              <p className=\"text-[0.8rem] text-muted-foreground\">\n                We&apos;ll use this to contact you. We will not share your email\n                with anyone else.\n              </p>\n            </div>\n            <div className=\"grid gap-2\">\n              <Label htmlFor=\"password\">Password</Label>\n              <Input id=\"password\" type=\"password\" required />\n              <p className=\"text-[0.8rem] text-muted-foreground\">\n                Must be at least 8 characters long.\n              </p>\n            </div>\n            <div className=\"grid gap-2\">\n              <Label htmlFor=\"confirm-password\">\n                Confirm Password\n              </Label>\n              <Input id=\"confirm-password\" type=\"password\" required />\n              <p className=\"text-[0.8rem] text-muted-foreground\">\n                Please confirm your password.\n              </p>\n            </div>\n            <Button type=\"submit\" className=\"w-full\">\n              Create Account\n            </Button>\n            <Button variant=\"outline\" type=\"button\" className=\"w-full\">\n              Sign up with Google\n            </Button>\n            <div className=\"text-center text-sm\">\n              Already have an account?{\" \"}\n              <Link href=\"#\" className=\"underline underline-offset-4\">\n                Sign in\n              </Link>\n            </div>\n          </div>\n        </form>\n      </CardContent>\n    </Card>\n  )\n}\n",
      "type": "registry:component",
      "target": "app/signup-01/components/signup-form.tsx"
    }
  ],
  "categories": [
    "authentication",
    "signup"
  ],
  "meta": {
    "iframeHeight": "600px"
  }
}